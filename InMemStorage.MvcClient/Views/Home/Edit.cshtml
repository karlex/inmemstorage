@model KeyValuePair<string, string>
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("PostEdit", "Home", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Key)
		@Html.TextBoxFor(m => m.Key, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Value)
		@Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
	</div>

	<button type="submit" class="btn btn-primary">Set Value</button>
}